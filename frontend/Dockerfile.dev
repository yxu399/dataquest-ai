# Development Dockerfile for hot-reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start the development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
